<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>{{.Title}}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" media="screen" href="/css/main.css" />

</head>
<body>
  <div>
  <h1>{{.Heading1}}</h1>
  {{if .NotAuthenticated}}
  <form method="POST" action="/login">
    <label for="name">Username</label>
    <input required type="text" id="name" placeholder="Username" name="name">
    <br>
    <label for="password">Password</label>
    <input required type="password" id="password" placeholder="Password" name="password">
    <br>
    <button type="submit">Login</button>
  </form>
  <br>
  <a href="/signUp">Sign Up</a>
  {{else}}
  <a href="/">Log Out</a>
  </div>
  <div>
    <table id="users">
      <tr>
        <th>Id</th>
        <th>Username</th>
        <th>Email</th>
      </tr>
    </table>
  <script>
    fetch("/api/users")
      .then(response => response.json())
      .then(users => {
        let table = document.getElementById("users");
        users.forEach(user => {
          let tr = document.createElement("TR");
          let td = document.createElement("TD");
          let txt = document.createTextNode(user.id);

          td.appendChild(txt);
          tr.appendChild(td);

          td = document.createElement("TD");
          txt = document.createTextNode(user.username);

          td.appendChild(txt);
          tr.appendChild(td);

          td = document.createElement("TD");
          txt = document.createTextNode(user.email);

          td.appendChild(txt);
          tr.appendChild(td);

          table.appendChild(tr);
        })
      })
      .catch(err => console.error(err))
  </script>
  {{end}}
  </div>
  <link rel="stylesheet" media="screen" href="/css/main.css" />

</body>
</html>